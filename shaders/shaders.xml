<shaders>
    <shaders>
        <shader name="base" src="shaders/base.vert"/>
    </shaders>

    <programs>
        <program name="base">
            <shader ref="base"/>
            <shader src="shaders/base.frag"/>
        </program>

        <program name="text">
            <shader src="shaders/text.vert"/>
            <shader src="shaders/text.frag"/>
        </program>

        <program name="marker">
            <shader ref="base"/>
            <shader src="shaders/marker.frag"/>
        </program>

        <program name="line">
            <shader ref="base"/>
            <shader src="shaders/line.frag"/>
        </program>

        <program name="verticalRange">
            <shader ref="base"/>
            <shader src="shaders/verticalRange.frag"/>
        </program>

        <program name="slider">
            <shader ref="base"/>
            <shader src="shaders/ui/slider.frag"/>
        </program>

        <program name="button">
            <shader ref="base"/>
            <shader src="shaders/ui/button.frag"/>
        </program>

        <program name="sdf">
            <shader src="shaders/sdf.comp"/>
        </program>

        <program name="image">
            <shader ref="base"/>
            <shader src="shaders/image.frag"/>
        </program>

    </programs>
</shaders>